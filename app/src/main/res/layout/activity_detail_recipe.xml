<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nama Resep dan Author -->
    <TextView
        android:id="@+id/viewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Resep"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/viewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by Author"
        android:textColor="#666666"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewNama" />

    <!-- Gambar Hidangan -->
    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_frame"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:layout_below="@id/viewAuthor"
        android:layout_marginTop="10dp" />

    <!-- Bahan-Bahan -->
    <TextView
        android:id="@+id/viewBahanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahan-Bahan"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imgPreview"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewBahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_below="@id/viewBahanLabel"
        android:layout_marginTop="4dp" />

    <!-- Langkah-Langkah -->
    <TextView
        android:id="@+id/viewLangkahLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Langkah-Langkah"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/viewBahan"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewLangkah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_below="@id/viewLangkahLabel"
        android:layout_marginTop="4dp" />

    <!-- Tombol Unduh -->
    <Button
        android:id="@+id/btnDownload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Unduh Resep"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/orange"
        android:padding="12dp"
        android:background="@drawable/oval_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
